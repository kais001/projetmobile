<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="100dp"/>
            <gradient
                android:angle="360"
                android:endColor="#103D42"
                android:startColor="#103D42"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Border -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="100dp"/>
            <solid android:color="#7CD4DF"/>
        </shape>
    </item>

    <!-- Content with Transparent Background -->
    <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="100dp"/>
            <solid android:color="#E33457"/>
        </shape>
    </item>
</layer-list>